<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="003-create-menu-items-table" author="coffee-shop">
        <createTable tableName="menu_items">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="shop_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="text"/>
            <column name="is_available" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="preparation_time_minutes" type="integer" defaultValue="5">
                <constraints nullable="false"/>
            </column>
            <column name="calories" type="integer" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="allergens" type="text"/>
            <column name="sort_order" type="integer" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="menu_items"
                baseColumnNames="shop_id"
                constraintName="fk_menu_items_shop"
                referencedTableName="shops"
                referencedColumnNames="id"/>

        <createIndex tableName="menu_items" indexName="idx_menu_item_shop">
            <column name="shop_id"/>
        </createIndex>

        <createIndex tableName="menu_items" indexName="idx_menu_item_category">
            <column name="category"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

