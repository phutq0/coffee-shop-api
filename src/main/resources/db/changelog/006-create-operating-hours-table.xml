<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="006-create-operating-hours-table" author="coffee-shop">
        <createTable tableName="operating_hours">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="shop_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="day_of_week" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="opening_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="closing_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="is_closed" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="text"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="operating_hours"
                baseColumnNames="shop_id"
                constraintName="fk_operating_hours_shop"
                referencedTableName="shops"
                referencedColumnNames="id"/>

        <createIndex tableName="operating_hours" indexName="idx_operating_hours_shop">
            <column name="shop_id"/>
        </createIndex>

        <createIndex tableName="operating_hours" indexName="idx_operating_hours_day">
            <column name="day_of_week"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

